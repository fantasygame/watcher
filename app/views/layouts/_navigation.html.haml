-# navigation styled for Bootstrap 3.0
%nav.navbar.navbar-default
  .container
    .navbar-header.navbar_margin
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'The Watcher', root_path, class: 'navbar-brand'
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        = render 'layouts/navigation_links'
      %ul.nav.navbar-nav.navbar-right.navbar_margin
        - if user_signed_in?
          %li= link_to 'My shows', subscriptions_path
          %li= link_to 'Episodes to see', to_see_episodes_path
        = render 'layouts/nav_links_for_auth'
      %ul.navbar-center{role: "search"}
        = render 'visitors/tv_search_form'

